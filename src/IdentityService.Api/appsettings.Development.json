{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=.;Initial Catalog=IdentityDb;Persist Security Info=False;User ID=sa;Password=v;MultipleActiveResultSets=False;Encrypt=True;TrustServerCertificate=True;Connection Timeout=30;"
  },
  "JwtSettings": {
    "Secret": "superSecretKeyThatShouldBeAtLeast32BytesLongForHS256", // Use Azure Key Vault for production!
    "Issuer": "ecommerce-identity-service",
    "Audience": "ecommerce-clients",
    "ExpirationMinutes": 60,
    "RefreshTokenExpirationDays": 7
  },
  "AzureServiceBus": {
    "ConnectionString": "Endpoint=sb://your-servicebus-namespace.servicebus.windows.net/;SharedAccessKeyName=RootManageSharedAccessKey;SharedAccessKey=YOUR_SHARED_ACCESS_KEY", // Use Key Vault!
    "TopicName": "ecommerceevents" // A single topic for all events
  },
  "OpenApi": {
    "Endpoint": {
      "Name": "Identity.API V1"
    },
    "Document": {
      "Description": "The Catalog Microservice HTTP API. This is a Data-Driven/CRUD microservice sample",
      "Title": "Demostore - Identity HTTP API",
      "Version": "v1"
    }
  }
}
